{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["esnext"],
    "types": ["node"],

    "rootDir": "./src",
    "outDir": "./build",

    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "moduleDetection": "force"
  },

  "include": ["src"]
}
